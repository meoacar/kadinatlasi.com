# KadınAtlası Admin Panel - Production Environment

APP_NAME="KadınAtlası Admin Panel"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE=Europe/Istanbul
APP_URL=https://admin.kadinatlasi.com

APP_LOCALE=tr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=tr_TR

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Database Configuration (VPS'deki mevcut database)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=kadinatlasi_com
DB_USERNAME=kadinatlasi_user
DB_PASSWORD=VPS_DATABASE_PASSWORD_HERE

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.kadinatlasi.com

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=kadinatlasi_admin

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=admin@kadinatlasi.com
MAIL_PASSWORD=APP_PASSWORD_HERE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=admin@kadinatlasi.com
MAIL_FROM_NAME="KadınAtlası Admin"

# File Storage
FILESYSTEM_DISK=public
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Logging
LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Security Settings
BCRYPT_ROUNDS=12

# Admin Panel Settings
ADMIN_SESSION_TIMEOUT=7200
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_LOCKOUT_DURATION=900

# Performance Settings
CACHE_TTL=3600
QUERY_CACHE_TTL=1800
VIEW_CACHE_ENABLED=true

# Monitoring
TELESCOPE_ENABLED=false
PULSE_ENABLED=true
DEBUGBAR_ENABLED=false

# Rate Limiting
RATE_LIMIT_ADMIN=60
RATE_LIMIT_API=100

# File Upload Limits
MAX_FILE_SIZE=10240
MAX_IMAGE_SIZE=5120
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,xls,xlsx

# Social Media Integration
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
TWITTER_API_KEY=
TWITTER_API_SECRET=

# Analytics
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# SSL Settings
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_ONLY=false